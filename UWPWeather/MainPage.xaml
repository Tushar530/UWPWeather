<Page x:Class="UWPWeather.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:UWPWeather"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Loaded="Page_Loaded"
      mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="HotPink">
        <StackPanel  VerticalAlignment="Center"
                >


        <Image Name="ResultImage"
               Width="200"
               Height="200"
               HorizontalAlignment="Center" />

        <TextBlock Name="TempTextBlock"
                   HorizontalAlignment="Center"
                   FontSize="52"
                   Foreground="White" />
        <TextBlock Name="DescriptionTextBlock"
                   HorizontalAlignment="Center"
                   FontSize="36"
                   Foreground="White" />
        <TextBlock Name="LocationTextBlock"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   Foreground="White" 
                   TextWrapping="Wrap"/>

    </StackPanel>
           </Grid>
</Page>
